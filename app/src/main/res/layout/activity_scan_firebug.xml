<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_view_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ets.gd.Activities.CommonFirebugScanActivity">


    <RelativeLayout
        android:id="@+id/rlCompanies"
        android:layout_width="match_parent"
        android:background="@color/greyBg"
        android:layout_height="32dp">

        <TextView
            android:id="@+id/tvCompanyText"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:text="Company:"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tvCompanyValue"
            android:text="DSI"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tvCompanyText"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="normal|bold"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/tvCompanyText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" />

        <ImageView
            app:srcCompat="@drawable/refresh_icon"
            android:layout_alignParentRight="true"
            android:id="@+id/ivChangeCompany"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="16dp" />

    </RelativeLayout>

    <include layout="@layout/scanning_area"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/include"
        android:layout_marginTop="40dp" />

</RelativeLayout>
