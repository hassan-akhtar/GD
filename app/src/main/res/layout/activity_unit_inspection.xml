<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_route_inspection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FireBug.UnitInspection.UnitInspectionActivity">


    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/include"
            layout="@layout/activity_header_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCompanies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlHeader">

        <include layout="@layout/company_header_layout" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlInspMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlCompanies"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/rlInspIcon">

            <TextView
                android:id="@+id/tvInspectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INSPECT ASSET" />

            <TextView
                android:id="@+id/tvAssetOtherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvInspectTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/tvAssetName"
                android:text="Dry Cream, EXT, L00419" />

            <TextView
                android:id="@+id/tvAssetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvAssetOtherInfo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="0038"
                android:textColor="@color/greyDark"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlInspIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_info" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_below="@+id/rlInspMain"
        android:background="@color/veryLightGrey"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rlInspType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlInspMain"
        android:layout_marginTop="25dp">

        <Spinner
            android:id="@+id/spInspType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/sp_bg_new"
            android:paddingBottom="10dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlStatusCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlInspType"
        android:layout_marginTop="28dp">

        <Spinner
            android:id="@+id/spStatusCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/sp_bg_new"
            android:paddingBottom="10dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlInspectionResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlStatusCode"
        android:layout_marginTop="28dp">


        <Spinner
            android:id="@+id/spInspectionResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/sp_bg_new"
            android:paddingBottom="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rlBottomsheet"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSave"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text="SAVE"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvReplace"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text="REPLACE"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text="CANCEL"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>