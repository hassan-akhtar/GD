<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context="com.ets.gd.Fragments.DeviceInfoFragment">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvDeviceID"
        android:textColor="@color/blueDark"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0b11ABOH-13A-Djasdasdjjasddd-jh asg356546fdgdss" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"

            android:layout_width="wrap_content"
            android:textColor="@color/veryLightGrey"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            android:text="Please call Data Support at:"/>

        <TextView
            android:id="@+id/tv2"
            android:textStyle="bold"
            android:layout_below="@+id/tv1"
            android:layout_width="wrap_content"
            android:textColor="@color/greyLight"
            android:textSize="19sp"
            android:layout_height="wrap_content"
            android:text="320-1155-3216"/>


        <TextView
            android:id="@+id/tv3"
            android:layout_below="@+id/tv2"
            android:layout_width="wrap_content"
            android:textColor="@color/veryLightGrey"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            android:text="For Registration key."/>


        </RelativeLayout>


</RelativeLayout>
